{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "esm",
    "moduleResolution": "Node",
    "module": "esnext",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
